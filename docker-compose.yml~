version: '3.8'
  
services:
  jupyter:
   image: jupyter/scipy-notebook 
   container_name: jupyter 
   ports:
    - 8888:8888
   working_dir: /home/jovyan
   volumes:
    - ./:/home/jovyan
   environment:
     JUPYTER_ENABLE_LAB: "yes"
   command: >
      sh -c "jupyter notebook --port=8888 --ip=0.0.0.0 --allow-root --NotebookApp.token='' --NotebookApp.password=''"
   restart: "no"
